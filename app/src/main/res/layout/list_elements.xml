<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnailVolley"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/palabra"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/palabra"
        android:gravity="center"
        android:textStyle="bold"
        android:text="espaÃ±ol"
        android:layout_above="@+id/enChino"
        android:layout_alignRight="@+id/pronuncia"
        android:layout_alignEnd="@+id/pronuncia" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textSize="@dimen/palabra"
        android:gravity="right"
        android:id="@+id/enChino"
        android:layout_alignBottom="@+id/thumbnailVolley"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textSize="@dimen/palabra"
        android:id="@+id/pronuncia"
        android:layout_alignTop="@+id/enChino"
        android:layout_toRightOf="@+id/enChino"
        android:layout_toEndOf="@+id/enChino" />

</RelativeLayout>